pipeline {
    agent any
    stages {
        stage('Deployment Using Ansible') {
            steps {
                ansiblePlaybook(
                    become: true,
                    credentialsId: 'ansible',
                    disableHostKeyChecking: true,
                    installation: 'ansible',
                    inventory: '/etc/ansible/hosts',
                    playbook: 'ansible-playbook.yml'
                )
            }
        }
    }
}
